  <button class="launcher" id="toggleChat">Chatta con noi</button>

  <div class="chat" id="chat">
    <div class="chat-header"><strong>AI Automation Assistant</strong></div>
    <div class="chat-body" id="chatBody">
      <div class="msg bot">Ciao ðŸ‘‹ Posso aiutarti con orari, menÃ¹ e prenotazioni.</div>
    </div>
    <div class="chat-input">
      <input id="msg" placeholder="Scrivi qui..." />
      <button id="send">Invia</button>
    </div>
  </div>

  <script>
    const chatPanel = document.getElementById('chat');
    const toggleBtn = document.getElementById('toggleChat');
    const bodyEl = document.getElementById('chatBody');
    const input = document.getElementById('msg');
    const send = document.getElementById('send');
    const ctx = [];

    toggleBtn.onclick = () => chatPanel.style.display = chatPanel.style.display==='flex' ? 'none' : 'flex';

    function addMsg(text, who='bot'){
      const d = document.createElement('div');
      d.className = 'msg ' + who;
      d.textContent = text;
      bodyEl.appendChild(d);
      bodyEl.scrollTop = bodyEl.scrollHeight;
    }

    async function ask(){
      const text = input.value.trim();
      if(!text) return;
      addMsg(text,'user');
      input.value='';
      try{
        const r = await fetch('/api/chat',{
          method:'POST',
          headers:{'Content-Type':'application/json'},
          body:JSON.stringify({message:text,context:ctx})
        });
        const data = await r.json();
        if(!r.ok){ addMsg('Errore: ' + (data.error || 'servizio non disponibile'),'bot'); return; }
        addMsg(data.reply || 'Ok.','bot');
        ctx.push({role:'user',content:text});
        ctx.push({role:'assistant',content:data.reply});
      }catch(e){
        addMsg('Errore di connessione','bot');
      }
    }
    send.onclick = ask;
    input.addEventListener('keydown',e=>{if(e.key==='Enter')ask()});
  </script>
